{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "gui",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}/gui"
        },
        {
            "name": "appworker",
            "type": "debugpy",
            "request": "launch",
            "justMyCode": false,
            "program": "${workspaceFolder}/.pyenv/bin/nomad",
            "args": [
                "admin",
                "run",
                "appworker",
            "--dev"
            ]
        },
        {
            "name": "app",
            "type": "debugpy",
            "request": "launch",
            "justMyCode": false,
            "program": "${workspaceFolder}/.pyenv/bin/nomad",
            "args": [
                "admin",
                "run",
                "app"
            ]
        },
        {
            "name": "worker",
            "type": "debugpy",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "justMyCode": false,
            "program": "${workspaceFolder}/.pyenv/bin/nomad",
            "args": [
                "admin",
                "run",
                "worker"
            ]
        },
        {
            "name": "hub",
            "type": "debugpy",
            "request": "launch",
            "justMyCode": false,
            "program": "${workspaceFolder}/.pyenv/bin/nomad",
            "args": [
                "admin",
                "run",
                "hub"
            ]
        },
        {
            "name": "yarn test",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "${workspaceRoot}/gui/node_modules/.bin/react-scripts",
            "args": [
                "test",
                "/src/components/search/SearchBar.spec.js"
            ],
            "cwd": "${workspaceRoot}/gui",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "env": {
                "CI": "true"
            }
        },
        {
            "name": "nomad parse",
            "type": "debugpy",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}/.pyenv/bin/nomad",
            "justMyCode": false,
            "args": [
                "parse",
                "--show-archive",
                "${workspaceFolder}/tests/data/someCC.log",
                ">",
                "parser.test.json"
            ]
        },
        {
            "name": "nomad test",
            "type": "debugpy",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}/.pyenv/bin/pytest",
            "justMyCode": false,
            "env": {
                "_PYTEST_RAISE": "1"
            },
            "args": [
                "-sv",
                "--pdb",
                "tests/normalizing/test_method.py",
            ]
        },
        {
            "name": "electronic test",
            "type": "debugpy",
            "request": "launch",
            "cwd": "${workspaceFolder}/dependencies/parsers/electronic",
            "program": "${workspaceFolder}/.pyenv/bin/pytest",
            "justMyCode": false,
            "env": {
                "_PYTEST_RAISE": "1"
            },
            "args": [
                "-sv",
                "--pdb",
                "tests/test_cp2kparser.py",
            ]
        },
        {
            "name": "workflow test",
            "type": "debugpy",
            "request": "launch",
            "cwd": "${workspaceFolder}/dependencies/parsers/workflow",
            "program": "${workspaceFolder}/.pyenv/bin/pytest",
            "justMyCode": false,
            "env": {
                "_PYTEST_RAISE": "1"
            },
            "args": [
                "-sv",
                "--pdb",
                "tests/test_phonopyparser.py",
            ]
        },
        {
            "name": "data test",
            "type": "debugpy",
            "request": "launch",
            "cwd": "${workspaceFolder}/dependencies/schema/simulation/data/tests",
            "program": "${workspaceFolder}/.pyenv/bin/pytest",
            "justMyCode": false,
            "env": {
                "_PYTEST_RAISE": "1"
            },
            "args": [
                "-sv",
                "--pdb",
                "-k",
                "test_cutoff",
                "test_basis_set.py",
            ]
        }
    ]
}